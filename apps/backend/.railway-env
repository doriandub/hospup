# Railway Environment Variables Template
# 🚨 IMPORTANT: Copy these to Railway dashboard → Variables tab

# 🗄️ Database (Railway auto-generates PostgreSQL)
DATABASE_URL=${{Postgres.DATABASE_URL}}

# 🔴 Redis (Railway auto-generates Redis)  
REDIS_URL=${{Redis.REDIS_URL}}

# 🔐 JWT Security (Generate secure random key!)
SECRET_KEY=hospup-jwt-super-secure-key-change-this-in-production-2024
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# ☁️ AWS S3 Configuration
AWS_ACCESS_KEY_ID=AKIA...
AWS_SECRET_ACCESS_KEY=...
AWS_DEFAULT_REGION=eu-west-1
S3_BUCKET_NAME=hospup-production-files

# 🤖 OpenAI API
OPENAI_API_KEY=sk-...

# 🌍 Environment
ENVIRONMENT=production
DEBUG=False
PYTHONPATH=apps/backend
PORT=8000

# 🌐 CORS Origins (Update with real Vercel URL)
CORS_ORIGINS=https://hospup-frontend.vercel.app,https://hospup.com,http://localhost:3000
ALLOWED_HOSTS=localhost,127.0.0.1,*.railway.app

# 📦 Celery Configuration
CELERY_BROKER_URL=${{Redis.REDIS_URL}}
CELERY_RESULT_BACKEND=${{Redis.REDIS_URL}}