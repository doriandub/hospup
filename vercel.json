{
  "version": 2,
  "buildCommand": "cd apps/frontend && npm run build",
  "outputDirectory": "apps/frontend/.next",
  "framework": "nextjs",
  "installCommand": "npm install",
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/apps/frontend/$1"
    }
  ],
  "env": {
    "NEXT_PUBLIC_API_URL": "https://hospup-backend-production.railway.app",
    "NEXT_PUBLIC_WS_URL": "wss://hospup-backend-production.railway.app",
    "NEXT_PUBLIC_ENVIRONMENT": "production",
    "NEXT_PUBLIC_APP_NAME": "Hospup SaaS"
  },
  "functions": {
    "apps/frontend/**": {
      "runtime": "nodejs18.x"
    }
  }
}